<%- include('../partials/head') %>
</head>
<body class="bg-rose-50 min-h-screen flex flex-col font-sans">
  <%- include('../partials/nav') %>

  <!-- Centered Form -->
  <main class="flex-grow flex items-center justify-center px-4 py-10">
    <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full border-t-4 border-rose-400">
      <h1 class="text-3xl font-extrabold text-center text-rose-600 mb-6">Login</h1>

      <form action="/login" method="post" class="space-y-5">
        <!-- Username -->
        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            placeholder="Enter your username"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400 transition"
            required
          >
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400 transition"
            required
          >
        </div>

        <!-- Submit -->
        <div>
          <button
            type="submit"
            name="login"
            class="w-full bg-rose-600 hover:bg-rose-700 text-white font-semibold py-2.5 rounded-lg shadow-md transition"
          >
            Login
          </button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>

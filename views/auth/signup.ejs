<%- include('../partials/head') %>
</head>

<body class="bg-rose-50 min-h-screen flex flex-col font-sans">
  <%- include('../partials/nav') %>

  <!-- Centered Form -->
  <main class="flex-grow flex items-center justify-center px-4 py-10">
    <div class="bg-white shadow-2xl rounded-2xl p-10 max-w-lg w-full border-t-4 border-rose-500">
      <h1 class="text-3xl font-extrabold text-center text-rose-600 mb-6">
        Create Your Account
      </h1>

      <!-- Error Alert -->
      <% if (errors.length > 0) { %>
        <div class="mb-6 bg-rose-100 text-rose-700 px-4 py-3 rounded-lg border border-rose-200">
          <ul class="list-disc list-inside space-y-1">
            <% errors.forEach(error => { %>
              <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <!-- Form Start -->
      <form action="/signup" method="post" class="space-y-6">
        <!-- First Name -->
        <div>
          <label for="firstname" class="block text-sm font-semibold text-gray-700 mb-1">First Name</label>
          <input
            type="text"
            id="firstname"
            name="firstname"
            required
            value="<%= oldInput.firstname || '' %>"
            placeholder="Enter your first name"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-rose-400 transition"
          />
        </div>

        <!-- Last Name -->
        <div>
          <label for="lastname" class="block text-sm font-semibold text-gray-700 mb-1">Last Name</label>
          <input
            type="text"
            id="lastname"
            name="lastname"
            value="<%= oldInput.lastname || '' %>"
            placeholder="Enter your last name (optional)"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-rose-300 transition"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-semibold text-gray-700 mb-1">Email Address</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            value="<%= oldInput.email || '' %>"
            placeholder="you@example.com"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-rose-400 transition"
          />
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-1">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="Enter your password"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-rose-400 transition"
          />
        </div>

        <!-- Confirm Password -->
        <div>
          <label for="confirmpassword" class="block text-sm font-semibold text-gray-700 mb-1">Confirm Password</label>
          <input
            type="password"
            id="confirmpassword"
            name="confirmpassword"
            required
            placeholder="Re-enter your password"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-rose-400 transition"
          />
        </div>

        <!-- User Type -->
        <div>
          <label for="usertype" class="block text-sm font-semibold text-gray-700 mb-1">User Type</label>
          <select
            id="usertype"
            name="usertype"
            required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-xl bg-white shadow-sm focus:ring-2 focus:ring-rose-400 transition"
          >
            <option value="" disabled <%= !oldInput.usertype ? 'selected' : '' %>>Select a user type</option>
            <option value="guest" <%= oldInput.usertype === 'guest' ? 'selected' : '' %>>Guest</option>
            <option value="host" <%= oldInput.usertype === 'host' ? 'selected' : '' %>>Host</option>
          </select>
        </div>

        <!-- Terms & Conditions -->
        <div class="flex items-start space-x-3">
          <input
            type="checkbox"
            id="tac"
            name="tac"
            required
            class="accent-rose-500 mt-1 w-4 h-4 rounded"
          />
          <label for="tac" class="text-sm text-gray-700">
            I agree to the
            <a href="/signup" class="text-rose-600 hover:underline">Terms and Conditions</a>.
          </label>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          name="signup"
          class="w-full bg-rose-600 hover:bg-rose-700 text-white font-semibold py-2.5 rounded-xl shadow-md transition duration-200"
        >
          Register
        </button>
      </form>
      <!-- Form End -->
    </div>
  </main>
</body>
</html>

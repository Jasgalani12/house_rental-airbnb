<%- include('../partials/head') %>
</head>
<body class="bg-rose-50 min-h-screen flex flex-col font-sans">
  <%- include('../partials/nav') %>

  <!-- Centered Form -->
  <main class="flex-grow flex items-center justify-center px-4 py-10">
    <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full border-t-4 border-rose-400">
      <h1 class="text-3xl font-extrabold text-center text-rose-600 mb-6">Register Your Home</h1>
      <form method="POST" action="/host/add-home" class="space-y-4">
        <input
          type="text"
          name="housename"
          placeholder="Enter your house name"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400"
        />
        <input
          type="number"
          name="pricepernight"
          placeholder="Enter price per night"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400"
        />
        <input
          type="text"
          name="location"
          placeholder="Enter location of house"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400"
        />
        <input
          type="number"
          name="rating"
          placeholder="Enter rating of house"
          max="5"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400"
        />
        <input
          type="text"
          name="photourl"
          placeholder="Enter photo URL"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400"
        />
        <button
          type="submit"
          class="w-full bg-rose-500 hover:bg-rose-600 text-white font-semibold py-2 rounded-lg transition duration-300"
        >
          Submit
        </button>
      </form>
    </div>
  </main>

</body>

</html>

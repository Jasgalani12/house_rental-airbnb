<%- include('../partials/head') %>
<style>
  @keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>
</head>
<body class="bg-rose-50 font-sans">

  <!-- Navbar -->
  <%- include('../partials/nav') %>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-10">
    <h1 class="text-5xl font-extrabold text-center text-rose-600 mb-12 drop-shadow-md">Host Your Homes</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10">
      <% rhouses.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow-md overflow-hidden transform hover:scale-[1.03] hover:shadow-xl transition duration-300 animate-fade-up">
          <img src="<%= home.photourl %>" alt="Home Image" class="h-52 w-full object-cover">
          <div class="p-5 flex flex-col gap-3">
            <div>
              <h2 class="text-xl font-bold text-slate-800 mb-1"><%= home.housename %></h2>
              <p class="text-slate-500 text-sm">üìç <%= home.location %></p>
            </div>
            <div class="flex justify-between items-center text-sm text-slate-700">
              <span>üí∞ ‚Çπ<%= home.pricepernight %>/night</span>
              <span class="text-amber-500 font-medium">‚≠ê <%= home.rating %>/5</span>
            </div>
            <div> <%= home.descreption %></div>

            <div class="flex gap-3 mt-4">
              <a href="/host/edit-home/<%= home._id %>?editing=true" class="flex-1 text-center bg-rose-500 hover:bg-rose-600 text-white font-medium py-2 px-4 rounded-lg transition duration-300 shadow-sm">
                Edit
              </a>
              <form action="/host/delete-home/<%= home._id %>" method="POST"  class="flex-1 text-center bg-rose-100 hover:bg-rose-200 text-rose-700 font-medium py-2 px-4 rounded-lg transition duration-300 shadow-sm border border-rose-300" >
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
